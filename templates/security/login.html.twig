{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center mt-4 mb-4">Connexion</h1>

    <form action="" method="post">
      <div class="form-group"><input class="form-control" name="_username" placeholder="Adresse email" type="email"></div>
      <div class="form-group"><input class="form-control" name="_password" placeholder="Mot de passe" type="password"></div>
      <div class="text-right">
        <button class="btn btn-primary" type="submit">Connexion !</button>
      </div>
    </form>
  </div>


{% endblock %}
